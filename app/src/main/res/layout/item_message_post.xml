<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="2dp"
    android:layout_height="wrap_content"
    android:id="@+id/relative_for_seen">
    <RelativeLayout
        android:layout_width="320dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/linear_background"
            android:orientation="horizontal"
            android:background="@drawable/chat_item_right_background">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/username_post_show"/>
            <TextView
                android:id="@+id/text_post_show"
                android:layout_width="wrap_content"
                android:maxWidth="242dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:text="проверка на cупердлинноепроверка на cупердлинноепроверка на cупердлинноепроверка на cупердлинное"
                android:padding="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/data_post_show"
                android:text="10:20 AM"
                android:padding="5dp"
                android:textColor="#808080"
                android:textSize="10dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/seen"
                android:id="@+id/post_image_show"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:padding="5dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/text_post_answers"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
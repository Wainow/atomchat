<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:padding="7dp"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linear_background"
            android:orientation="horizontal"
            android:gravity="left"
            android:background="@drawable/chat_item_left_background">
        <TextView
            android:id="@+id/message_item"
            android:layout_width="wrap_content"
            android:maxWidth="229dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:text="111111111111111111111111111111111111111111111111111111111111111111111111"
            android:padding="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_item"
            android:text="10:20 AM"
            android:padding="5dp"
            android:textSize="10dp"/>
        </LinearLayout>
</RelativeLayout>